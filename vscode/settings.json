{
  // window settings
  "window.zoomLevel": 2.0,
  "window.nativeTabs": true,
  // editor settings
  "editor.fontSize": 14,
  "editor.renderWhitespace": "all",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  // gitlens settings
  "gitlens.autolinks": [
    {
      "prefix": "HIVE-",
      "url": "https://issues.apache.org/jira/browse/HIVE-<num>"
    },
    {
      "prefix": "GLUTEN-",
      "url": "https://github.com/apache/incubator-gluten/issues/<num>"
    }
  ],
  // trace log for troubleshooting when connection can not be established.
  "remote.SSH.logLevel":"trace",
  // respect curl first since wget could encounter compatible issue,
  // for example --no-config is not avaialble in old version.
  "remote.SSH.useCurlAndWgetConfigurationFiles": true,
}
